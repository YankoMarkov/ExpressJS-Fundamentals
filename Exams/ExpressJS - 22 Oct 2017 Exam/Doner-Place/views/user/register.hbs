<div class="content">
  <h1 class="head-title">Register User</h1>
  <form class="form center-form" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input class="input-field" type="text" id="username" name="username">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input class="input-field" type="password" id="password" name="password">
    </div>

    <div class="form-group">
      <label for="confirmedPassword">Confirm Password</label>
      <input class="input-field" type="password" id="confirmedPassword" name="confirmedPassword">
    </div>

    <div class="form-group">
      <label for="firstName">First Name</label>
      <input class="input-field" type="text" id="firstName" name="firstName">
    </div>

    <div class="form-group">
      <label for="lastName">Last Name</label>
      <input class="input-field" type="text" id="lastName" name="lastName">
    </div>

    <div class="form-group">
      <label for="age">Age</label>
      <input class="input-field" type="number" id="age" name="age">
    </div>

    <div class="form-group">
      <input class="btn form-btn" type="submit" value="Register">
    </div>
  </form>
</div>