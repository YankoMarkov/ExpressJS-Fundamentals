<h1>Manage orders</h1>
<div class="orders">
  <form method="post">
    {{#each orders}}
    <div class="order">
      <span class="order-time">{{this.orderDate}}</span>
      <span class="order-name">{{this.product.name}} doner, {{product.size}} cm</span>
      <span class="order-status">
        <select name="{{this._id}}" selected="{{this.orderStatus}}">
          <option selected="selected" value="pending">Pending</option>
          <option value="inProgress">In Progress</option>
          <option value="inTransit" selected>In Transit</option>
          <option value="delivered">Delivered</option>
        </select>
      </span>
      <a href="/orderDetails/{{this._id}}" class="button order-button">Details</a>
    </div>
    {{else}}
    <p style="font-style: italic">No orders!</p>
    {{/each}}
    <input type="submit" value="Save Changes" class="button" style="border:0">
  </form>
</div>