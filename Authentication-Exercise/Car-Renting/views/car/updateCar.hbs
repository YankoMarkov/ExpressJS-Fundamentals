<form method="POST" enctype="multipart/form-data">
  <h2>Update Car</h2>

  <label for="image"></label>
  <img id="image" src="{{car.image}}" alt="car image">

  <label for="marc">Marc</label>
  <input id="marc" name="marc" type="text" value="{{car.marc}}" />

  <label for="model">Model</label>
  <input id="model" name="model" type="text" value="{{car.model}}" />

  <label for="year">Year</label>
  <input id="year" name="year" type="number" min="1900" max="2018" value="{{car.year}}" />

  <label for="price">Price</label>
  <input id="price" name="price" type="number" step="0.01" value="{{car.price}}" />

  <label for="image">Image</label>
  <input id="image" name="image" type="url" value="{{car.image}}" />

  <input id="submit" type="submit" value="Update">
</form>